package edu.neumont.csc250;

import java.util.ArrayList;

public class PrimeNumbers {

	public static void main(String[] args) {
		
		int max = 25;
		
		ArrayList<Integer> primes = findPrimes(max);
		
		print(primes);
	}

	private static ArrayList<Integer> findPrimes(int max) {

		ArrayList<Integer> nums = new ArrayList<Integer>();
		
		int num = 2;
		while(num < max){
			nums.add(num);
			num++;
		}
		
		boolean stop = false;
		
		for (int i = num; i < max && stop; i++){
			
			for (int j = num + 1; j < max; j++){
				if(nums.get(j) % num == 0)
					nums.remove(i);
			}
			if(num >= Math.sqrt(max))
				stop = true;
		}
		
		return nums;
	}


	private static void print(ArrayList<Integer> primes) {
		for (Integer i : primes){
			System.out.println(i + ", ");
		}		
	}
}
