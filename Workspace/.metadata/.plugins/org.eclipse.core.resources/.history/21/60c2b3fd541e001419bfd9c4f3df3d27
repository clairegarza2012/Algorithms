package edu.neumont.csc250;

public class InsertBinaryTree {

	public static void main(String[] args){
		
	}
	
	public static boolean insert(Object data){
		
		TreeNode root = new TreeNode();
				
		if (root == null)
			return false;
		
		insert(root, null, data);
		
		return true;
	}
	
	private static void insert(TreeNode root, TreeNode parent, Object k){
		
		if (root == null){
			return;
		}
		
		if (root.isLeaf){
			if (root.compareTo(k) > 0){
			}
			else if (root.compareTo(k) < 0){
			}
		}
		
		if (root.compareTo(k) > 0){
			
			if (parent == null){
				parent = root;
			}
			insert(root.leftDecsendent, parent, k);
		}
		else if (root.compareTo(k) < 0){
			
			if (parent == null){
				parent = root;
			}
			insert(root.rightDecsendent, parent, k);
		}
		else{
			return;
		}
		
	}
}
