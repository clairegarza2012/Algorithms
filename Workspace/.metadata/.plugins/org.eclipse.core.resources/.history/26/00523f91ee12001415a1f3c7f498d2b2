package edu.neumont.csc250.test;

import org.junit.Test;
import edu.neumont.csc250.Hospital;
import edu.neumont.csc250.MyClient;

public class HospitalTest {

	private Hospital store = new Hospital(3);

	@Test
	public void test() {

		MyClient client1 = new MyClient(5, 5);
		MyClient client2 = new MyClient(6, 4);
		MyClient client3 = new MyClient(3, 3);
		MyClient client4 = new MyClient(10, 2);
		MyClient client5 = new MyClient(1, 10);
		MyClient client11 = new MyClient(5, 5);
		MyClient client12 = new MyClient(6, 3);
		MyClient client13 = new MyClient(3, 2);
		MyClient client14 = new MyClient(10, 20);
		MyClient client15 = new MyClient(1, 4);

		store.addClient(client1);
		store.addClient(client2);
		store.addClient(client3);
		store.addClient(client4);
		store.addClient(client5);
		store.addClient(client11);
		store.addClient(client12);
		store.addClient(client13);
		store.addClient(client14);
		store.addClient(client15);

		store.printLines();

		System.out.println(client1.getExpectedServiceTime() + " " + client1.getAttritionTime() + " " + store.getClientWaitTime(client1));
		System.out.println(client2.getExpectedServiceTime() + " " + client2.getAttritionTime() + " " + store.getClientWaitTime(client2));
		System.out.println(client3.getExpectedServiceTime() + " " + client3.getAttritionTime() + " " + store.getClientWaitTime(client3));
		System.out.println(client4.getExpectedServiceTime() + " " + client4.getAttritionTime() + " " + store.getClientWaitTime(client4));
		System.out.println(client5.getExpectedServiceTime() + " " + client5.getAttritionTime() + " " + store.getClientWaitTime(client5));
		System.out.println(client11.getExpectedServiceTime() + " " + client11.getAttritionTime() + " " + store.getClientWaitTime(client11));
		System.out.println(client12.getExpectedServiceTime() + " " + client12.getAttritionTime() + " " + store.getClientWaitTime(client12));
		System.out.println(client13.getExpectedServiceTime() + " " + client13.getAttritionTime() + " " + store.getClientWaitTime(client13));
		System.out.println(client14.getExpectedServiceTime() + " " + client14.getAttritionTime() + " " + store.getClientWaitTime(client14));
		System.out.println(client15.getExpectedServiceTime() + " " + client15.getAttritionTime() + " " + store.getClientWaitTime(client15));


		System.out.println(store.getAverageClientWaitTime());
	}

}
