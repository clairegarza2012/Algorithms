public class HuffmanTreeTest {

	@Test
	public void test1(){
		
		String string = "Hello World!";
		byte[] originalBytes = string.getBytes();
		HuffmanTree tree = new HuffmanTree(originalBytes);
		
		HuffmanCompressor hm = new HuffmanCompressor();
		byte[] compressedBytes = hm.compress(tree, originalBytes);
		byte[] decompressedBytes = hm.decompress(tree, string.length(), compressedBytes);
		
		for (int i = 0; i < decompressedBytes.length; i++){
			if (originalBytes[i] != decompressedBytes[i]){
				System.out.println("FALSE!");
			}
		}
		
		System.out.println(String.valueOf(originalBytes));
	}
	
