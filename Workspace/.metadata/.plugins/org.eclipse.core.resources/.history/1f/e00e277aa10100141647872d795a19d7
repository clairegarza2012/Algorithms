package edu.neumont.csc250;

import java.io.IOException;

import edu.neumont.ui.Picture;

public class Test {

	public static void main(String[] args) {

		Picture pic = new Picture("matrix.png");
		
		Steganog nog = new Steganog();
		
		String hiddenMessage = "";
		
		for (int i = 0; i < 10000; i++){
			hiddenMessage += i + ", ";
		}
		
		Picture picWithMessage = null;
		try {
			picWithMessage = nog.embedIntoImage(pic, hiddenMessage);
		} catch (IOException e) {
			e.printStackTrace();
		}
		//picWithMessage.save("newPic.png");
		
		String message = "";
		
		try {
			message = nog.retreiveFromImage(picWithMessage);
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		System.out.println(message);
	}

}
