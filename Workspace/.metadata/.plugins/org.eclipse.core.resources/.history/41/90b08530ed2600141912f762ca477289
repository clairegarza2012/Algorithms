package edu.neumont.csc252;

public class AVLTree<T extends Comparable<T>> {

	private AVLNode<T> root = null;

	public AVLTree(){ }

	public boolean insert(AVLNode<T> node){

		if (root == null){
			root = node;
			System.out.println(root);
		}
		else {
			insertNode(root, node);
		}
		return true;
	}

	private boolean insertNode(AVLNode<T> root, AVLNode<T> node){
		if(root.compareTo(node) == 0){
			if (node.compareTo(this.root) != 0)
				return true;
			return false;
		}

		if (root.getLeft() == null && root.getRight() == null){
			if (root.compareTo(node) > 0){
				root.setLeft(node);
			}else if (root.compareTo(node) < 0){
				root.setRight(node);
			}
			return true;
		}

		if (root.compareTo(node) > 0){
			insertNode(root.getLeft(), node);
		}else if (root.compareTo(node) < 0){
			insertNode(root.getRight(), node);
		}

		return false;
	}

	private void balanceTree(){

	}

	public boolean delete(AVLNode<T> node){

		return false;
	}

	public boolean getSmallest(){

		return getSmallestValue(root) != null;
	}

	private T getSmallestValue(AVLNode<T> root){

		if (root.getLeft() == null && root.getRight() == null){
			return root.getValue();
		}

		return getSmallestValue(root.getLeft());
	}

	public void printTree(){
		printHelper(root);
	}

	private void printHelper(AVLNode<T> root){

		System.out.println(root.getLeft() + " " + root.getRight());
		if(root.getLeft() == null && root.getRight() == null){
			System.out.println(root);
			return;
		}
		printHelper(root.getLeft());
		printHelper(root.getRight());
	}
