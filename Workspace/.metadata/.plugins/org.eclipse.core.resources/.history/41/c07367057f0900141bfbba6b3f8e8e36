package edu.neumont.csc250;

import java.util.ArrayList;

public class FindK {

	public static void main(String[] args){

		ArrayList<Integer> nums = new ArrayList<Integer>();
		nums.add(2);
		nums.add(5);
		nums.add(7);
		nums.add(11);
		nums.add(13);
		nums.add(17);
		nums.add(19);
		nums.add(23);

		int k = 7;

		int kIndex = findKIterative(nums, k);
		int kIndex2 = findKRecursive(nums, k);

		System.out.println(kIndex);
		System.out.println(kIndex2);
	}

	private static int findKIterative(ArrayList<Integer> nums, int k) {

		int i = nums.size() / 2;
		int index = i;
		int count = 1;

		boolean found = false;

		while (!found){
			if ((nums.get(index)) == k){
				found = true;
				return index;
			}
			else if ((nums.get(index)) < k){
				i = i / 2;
				index += i;
			}
			else if ((nums.get(index)) >  k){
				i = i / 2;
				index -= i;
			}
			
			if (i == 0){
				found = true;
				return -1;
			}
		}

		return 0;
	}

	private static int findKRecursive(ArrayList<Integer>nums, int k){

		int i = nums.size()/ 2;
		int index = i;

		index = findK(nums, k, i, index);

		return index;
	}

	private static int findK(ArrayList<Integer> nums, int k, int i, int index) {

		if ((nums.get(index)) == k){
			return index;
		}
		
		else if ((nums.get(index)) < k){
			i = i / 2;
			index += i;
			
			findK(nums, k, i, index);
		}
		else if ((nums.get(index)) >  k){
			i = i / 2;
			index -= i;
			
			findK(nums, k, i, index);
		}
		
		if (i == 0)
			return -1;

		return 0;
	}







}
