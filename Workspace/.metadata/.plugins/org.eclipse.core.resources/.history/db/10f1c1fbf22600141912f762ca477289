	//			return root;
	//		}
	//		else if (root.getLeft() == null && root.getRight() == null){
	//			return null;
	//		}
	//		
	//		if (root.compareTo(node) < 0){
	//			return searchTree(root.getLeft(), node);
	//		}
	//		else if (root.compareTo(node) > 0){
	//			return searchTree(root.getRight(), node);
	//		}
	//		
	//		return null;
	//	}

}
