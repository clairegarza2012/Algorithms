package edu.neumont.csc250;

import java.util.ArrayList;

public class JosephusProblem {

	public static void main(String[] args){
		int n = 4;

		ArrayList<Integer> lastNumber = findLast(n);

		for( Integer i : lastNumber){
			System.out.println(i);
		}
	}

	private static ArrayList<Integer>  findLast(int n) {

		ArrayList<Integer> nums = new ArrayList<Integer>();

		for (int i = 1; i <= n; i++){
			nums.add(i);
		}

		int index = 1;
		for (int i = 0; i < nums.size(); i++){
			if(i == nums.size() - 1){
				index = 0;
				nums.remove(index);
			}else if (i > nums.size() - 1){
				index = 1;
				nums.remove(index);
			}else{
				nums.remove(index);
			}
		}

		return nums;
	}
}
