package edu.neumont.csc250;

public class recursionTwo {

	public static void main(String[] args){
		
		int n = 0;
		int value = fibinacci(n);
		
		System.out.println(value);
	}
	
	private static int fibinacci(int n){
		return fibHelper(n, 0, 1, 0);
	}
	
	private static int fibHelper(int n, int last, int lastlast, int i){
		
		if (n == 0){
			return 0;
		}
		if (n == 1){
			return 1;
		}
		if (i > n){
			return lastlast;
		}
				
		return fibHelper(n, lastlast, last + lastlast, i++);
	}
}
