		System.out.println(client14.getExpectedServiceTime() + " " + store.getClientWaitTime(client14));
		System.out.println(client15.getExpectedServiceTime() + " " + store.getClientWaitTime(client15));

		
		
		store.advanceMinute();
		store.advanceMinute();
		store.advanceMinute();
		
		System.out.println();
