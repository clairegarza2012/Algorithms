package edu.neumont.csc250;

import java.util.ArrayList;

public class FindK {

	public static void main(String[] args){
	
		ArrayList<Integer> nums = new ArrayList<Integer>();
		nums.add(2);
		nums.add(5);
		nums.add(7);
		nums.add(11);
		nums.add(13);
		nums.add(17);
		nums.add(19);
		nums.add(23);
		
		int k = 5;
		
		int kIndex = findK(nums, k);
		System.out.println(kIndex);
	}

	private static int findK(ArrayList<Integer> nums, int k) {

		int i = nums.size() / 2;
		int index = i;
		int count = 1;
		
		boolean found = false;
		
		while (!found){
			if (nums.get(index) == k){
				found = true;
				return index;
			}
			else if (nums.get(index) > k){
				i = i / 2;
				index += i;
				System.out.println(nums.get(index));
			}
			else if (nums.get(index) <  k){
				i = i / 2;
				index -= i;
			}
			if (i == 0){
				if(count == 2){
					found = true;
					return -1;
				}else
					count++;
			}
		}
		
		return 0;
	}
	
	
	
	
	
	
	
	
	
}
